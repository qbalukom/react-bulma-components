{
  "name": "react-bulma-components",
  "version": "4.1.0",
  "description": "React components for Bulma framework",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./src/index.d.ts",
  "sideEffects": false,
  "files": [
    "esm",
    "cjs",
    "index.esm.mjs",
    "**/*.d.ts"
  ],
  "directories": {
    "esm": "esm",
    "cjs": "cjs"
  },
  "scripts": {
    "test": "jest",
    "test:cov": "eslint ./src && jest --coverage",
    "eslint": "eslint ./src",
    "coveralls": "cat ./.coverage/lcov.info | coveralls",
    "storybook": "start-storybook -p 6006",
    "docs": "cd documentation && npm start",
    "clean:build": "rm -rf esm cjs",
    "build-storybook-static": "build-storybook -c .storybook -o .out",
    "prepublish": "npm run clean:build && npm run build-all",
    "deploy-storybook": "storybook-to-ghpages",
    "babel": "babel ./src --source-maps --ignore \"**/__test__,**/*.story.js\"",
    "build-commonjs": "TARGET=commonjs npm run babel -- --out-dir ./cjs ",
    "build-esm": "npm run babel -- --out-dir ./esm",
    "build-all": "npm run build-commonjs && npm run build-esm",
    "upgrade-dependencies": "npx npm-check --update"
  },
  "storybook-deployer": {
    "gitUsername": "Couds",
    "gitEmail": "john.elric@gmail.com",
    "commitMessage": "Deploy Storybook [skip ci]"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/couds/react-bulma-components.git"
  },
  "keywords": [
    "react",
    "bulma",
    "bulma.io",
    "css",
    "bootstrap",
    "modal",
    "layout",
    "responsive"
  ],
  "author": "John Benavides",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/couds/react-bulma-components/issues"
  },
  "homepage": "https://react-bulma.dev",
  "dependencies": {
    "classnames": "2.5.1"
  },
  "peerDependencies": {
    "bulma": ">=0.9.2",
    "prop-types": ">=15.6.0",
    "react": ">=16.3.0",
    "react-dom": ">=16.3.0"
  },
  "devDependencies": {
    "@babel/cli": "7.28.0",
    "@babel/core": "7.28.0",
    "@babel/plugin-transform-react-constant-elements": "7.27.1",
    "@babel/plugin-transform-runtime": "7.28.0",
    "@babel/preset-env": "7.28.0",
    "@babel/preset-react": "7.27.1",
    "@fortawesome/fontawesome-free": "7.0.0",
    "@types/react": "19.1.9",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "30.0.5",
    "babel-plugin-transform-react-remove-prop-types": "0.4.24",
    "babel-runtime": "6.26.0",
    "bulma": "1.0.4",
    "chai": "5.2.1",
    "coveralls": "3.1.1",
    "emotion": "11.0.0",
    "emotion-theming": "11.0.0",
    "eslint": "9.32.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jest": "29.0.1",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.5.3",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "jest": "30.0.5",
    "jsdom": "26.1.0",
    "moment": "2.30.1",
    "node-sass": "9.0.0",
    "nodemon": "3.1.10",
    "prettier": "3.6.2",
    "prop-types": "15.8.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sass": "1.89.2",
    "sass-loader": "16.0.5",
    "source-map-support": "0.5.21",
    "typescript": "5.8.3",
    "webpack": "5.101.0"
  },
  "overrides": {
    "react": "19.x",
    "react-dom": "19.x"
  }
}
